<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SubServicios">

    <resultMap id="result" type="SubServicios">
        <!-- property="atributo java" column="columna tabla" -->
        <result property="idsubservicio" column="idsubservicios"/>
        <result property="nombreSub" column="nombreSub"/>
        <result property="precioSub" column="precioSub"/>
        <result property="fechaSub" column="fechaSub"/>
        <result property="tiempo_estimadoSub" column="tiempo_estimadoSub"/>
        <result property="usuario_cedula" column="usuario_cedula"/>
        <result property="subservicio_idsubservicio" column="subservicio_idsubservicio"/>
    </resultMap>

    <select id="selectAll" resultMap="result">
        SELECT *
        FROM facturacion.serviciosub;
    </select>

    <select id="selectById" parameterType="int" resultMap="result">
        SELECT *
        FROM facturacion.serviciosub
        WHERE idsubservicios = #{idsubservicio}
    </select>

    <select id="selectByNombre" parameterType="string" resultMap="result">
        SELECT *
        FROM facturacion.serviciosub
        WHERE nombreSub = #{nombreSub}
    </select>

    <insert id="insert" parameterType="SubServicios" useGeneratedKeys="true" keyProperty="idsubservicio">
        INSERT INTO facturacion.serviciosub (idsubservicios, nombreSub, precioSub, fechaSub, tiempo_estimadoSub, usuario_cedula, subservicio_idsubservicio)
        VALUES (#{idsubservicio}, #{nombreSub}, #{precioSub}, #{fechaSub}, #{tiempo_estimadoSub}, #{usuario_cedula}, #{subservicio_idsubservicio});
    </insert>

    <update id="update" parameterType="SubServicios">
        UPDATE facturacion.serviciosub
        SET nombreSub = #{nombre}, precioSub = #{precio},
            fechaSub = #{fecha}, tiempo_estimadoSub = #{tiempo_estimado},
            usuario_cedula = #{usuario_cedula}, subservicio_idsubservicio = #{subservicio_idsubservicio}
        WHERE idsubservicios = #{idsubservicio}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM facturacion.serviciosub
        WHERE idsubservicios = #{idsubservicio}
    </delete>
</mapper>