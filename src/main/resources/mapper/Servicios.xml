<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Servicios">

    <resultMap id="result" type="Servicios">
        <!-- property="atributo java" column="columna tabla" -->
        <result property="idservicios" column="idservicios"/>
        <result property="nombre" column="nombre"/>
        <result property="precio" column="precio"/>
        <result property="fecha" column="fecha"/>
        <result property="tiempo_estimado" column="tiempo_estimado"/>
        <result property="usuario_cedula" column="usuario_cedula"/>
    </resultMap>

    <select id="selectAll" resultMap="result">
        SELECT *
        FROM facturacion.servicios;
    </select>

    <select id="selectById" parameterType="int" resultMap="result">
        SELECT *
        FROM facturacion.servicios
        WHERE idservicios = #{idservicios}
    </select>

    <insert id="insert" parameterType="Servicios" useGeneratedKeys="true" keyProperty="idservicios">
        INSERT INTO facturacion.servicios (nombre, precio, fecha, tiempo_estimado, subservicio_idsubservicio, usuario_cedula)
        VALUES (#{nombre}, #{precio}, #{fecha}, #{tiempo_estimado}, #{subservicio_idsubservicio}, #{usuario_cedula});
    </insert>

    <update id="update" parameterType="Servicios">
        UPDATE facturacion.servicios
        SET nombre = #{nombre}, precio = #{precio},
            fecha = #{fecha}, tiempo_estimado = #{tiempo_estimado},
            subservicio_idsubservicio = #{subservicio_idsubservicio}, usuario_cedula = #{usuario_cedula}
        WHERE idservicios = #{idservicios}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM facturacion.servicios
        WHERE idservicios = #{idservicios}
    </delete>
</mapper>