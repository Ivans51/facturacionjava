<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorPane" prefHeight="545.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/8.0.111" fx:controller="core.controller.Administrador">
    <children>
        <HBox alignment="CENTER" layoutX="14.0" layoutY="-36.0" styleClass="layot-color-tercer"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox HBox.hgrow="ALWAYS">
                    <children>
                        <JFXButton fx:id="btnAuditoria" onAction="#actionAuditoria" text="Mostrar Auditoria"/>
                    </children>
                </HBox>
                <HBox alignment="TOP_RIGHT" layoutX="341.0" layoutY="20.0" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <ComboBox fx:id="cReportes" prefWidth="150.0"/>
                        <JFXButton fx:id="btnReportes" onAction="#actionReportes" text="Reportes"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <TableView fx:id="tableReport" layoutX="75.0" layoutY="45.0" prefHeight="245.0" prefWidth="1000.0"
                   AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="45.0">
            <columns>
                <TableColumn prefWidth="75.0" text="ID" fx:id="tbId"/>
                <TableColumn prefWidth="75.0" text="Fecha" fx:id="tbFecha"/>
                <TableColumn prefWidth="75.0" text="Hora" fx:id="tbHora"/>
                <TableColumn prefWidth="75.0" text="Accion" fx:id="tbAcion"/>
                <TableColumn prefWidth="75.0" text="N.Usuario" fx:id="tbUsuario"/>
            </columns>
        </TableView>
        <JFXButton fx:id="btnSalir" layoutX="894.0" layoutY="506.0" onAction="#actionSalir" text="Salir"
                   AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="20.0"/>
        <JFXButton fx:id="btnImprimir" layoutX="14.0" layoutY="506.0" onAction="#actionImprimir"
                   styleClass="button-black" text="Imprimir"/>
    </children>
    <stylesheets>
        <URL value="@../CSS/styles-layout.css"/>
        <URL value="@../CSS/styles-label.css"/>
        <URL value="@../CSS/styles-button.css"/>
    </stylesheets>
</AnchorPane>
