<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorPane" prefHeight="545.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/8.0.111" fx:controller="core.controller.Factura">
    <children>
        <HBox layoutX="14.0" styleClass="layot-color-tercer" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Label styleClass="label-bold" text="Generar Factura" textFill="WHITE"/>
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <JFXButton fx:id="btnImprimir" onAction="#actionImprimir" styleClass="button-bold"
                                   text="Imprimir"/>
                    </children>
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox layoutX="14.0" layoutY="101.0" prefHeight="501.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="45.0">
            <children>
                <VBox layoutX="10.0" layoutY="10.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="label-bold" text="Clliente"/>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Cédula"/>
                                <TextField fx:id="jCedula"/>
                                <JFXButton fx:id="btnBuscar" onAction="#actionBuscar" text="Buscar"/>
                            </children>
                            <padding>
                                <Insets bottom="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <TableView fx:id="tableCliente">
                            <columns>
                                <TableColumn fx:id="tbCedula" prefWidth="75.0" text="Cédula"/>
                                <TableColumn fx:id="tbNombreCliente" prefWidth="75.0" text="Nombre"/>
                                <TableColumn fx:id="tbCiudad" prefWidth="75.0" text="Ciudad"/>
                                <TableColumn fx:id="tbFecha" prefWidth="75.0" text="Fecha"/>
                                <TableColumn fx:id="tbTelefono" prefWidth="75.0" text="Teléfono"/>
                            </columns>
                        </TableView>
                        <Label text="Cliente Elegido"/>
                        <HBox spacing="10.0">
                            <children>
                                <VBox>
                                    <children>
                                        <Label text="Nombre"/>
                                        <TextField fx:id="jNombre" editable="false"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Ciudad"/>
                                        <TextField fx:id="jCiudad" editable="false"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Teléfono"/>
                                        <TextField fx:id="jTelefono" editable="false"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <JFXButton fx:id="btnElegir" onAction="#actionElegir" text="Eligir"/>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <VBox>
                                    <children>
                                        <Label styleClass="label-bold" text="Servicios"/>
                                        <ComboBox fx:id="cServicios" prefWidth="150.0"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Precio"/>
                                        <TextField fx:id="jPrecio" disable="true"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Tiempo Estimado (Hr)"/>
                                        <TextField fx:id="jFecha" disable="true"/>
                                    </children>
                                </VBox>
                                <VBox/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <JFXButton fx:id="btnAgregar" onAction="#actionAgregar" text="Agregar"/>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <TableView fx:id="tableServicio">
                            <columns>
                                <TableColumn fx:id="tbID" prefWidth="75.0" text="ID"/>
                                <TableColumn fx:id="tbNombreServicio" prefWidth="75.0" text="Servicio"/>
                                <TableColumn fx:id="tbPrecio" prefWidth="75.0" text="Precio"/>
                                <TableColumn fx:id="tbTiempoEstimado" prefWidth="75.0" text="TiempoEstimado"/>
                            </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <JFXButton fx:id="btnSalir" onAction="#actionSalir" text="Salir"/>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@../CSS/styles-label.css"/>
        <URL value="@../CSS/styles-layout.css"/>
        <URL value="@../CSS/styles-button.css"/>
    </stylesheets>
</AnchorPane>
