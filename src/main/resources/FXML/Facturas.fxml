<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorPane" prefHeight="545.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/8.0.111" fx:controller="core.controller.Factura">
    <children>
        <HBox layoutX="14.0" styleClass="layot-color-tercer" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Label styleClass="label-bold" text="Generar Factura" textFill="WHITE"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox layoutX="14.0" layoutY="101.0" prefHeight="501.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="45.0">
            <children>
                <VBox prefHeight="500.0" prefWidth="454.0" spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="label-bold" text="Servicios"/>
                        <ComboBox fx:id="cServicios" prefWidth="150.0"/>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Precio"/>
                                <TextField fx:id="jPrecio" disable="true">
                                    <HBox.margin>
                                        <Insets left="55.0"/>
                                    </HBox.margin>
                                </TextField>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Fecha Entrega"/>
                                <TextField fx:id="jFecha" disable="true"/>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <JFXButton fx:id="btnAgregar" onAction="#actionAgregar" text="Agregar"/>
                                <JFXButton fx:id="btnSalir" onAction="#actionSalir" text="Salir"/>
                            </children>
                        </HBox>
                        <Separator prefWidth="200.0"/>
                        <Label styleClass="label-bold" text="Servicios Añadidos"/>
                        <HBox spacing="10.0">
                            <children>
                                <ComboBox fx:id="cServiciosAgregados" prefWidth="150.0"/>
                                <JFXButton fx:id="btnMostrarProducto" onAction="#actionMostrar" text="Mostrar Info"/>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Fecha Entrega"/>
                                <Label fx:id="lblFecha" text="Label">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                        <HBox layoutX="20.0" layoutY="200.0" spacing="10.0">
                            <children>
                                <Label text="Precio Servicio"/>
                                <Label fx:id="lblPrecio" text="Label"/>
                            </children>
                        </HBox>
                        <HBox layoutX="20.0" layoutY="310.0" spacing="10.0">
                            <children>
                                <Label text="Precio Total"/>
                                <Label fx:id="lblTotal" text="Label">
                                    <HBox.margin>
                                        <Insets left="20.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
                <VBox layoutX="10.0" layoutY="10.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="label-bold" text="Clliente"/>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Cédula"/>
                                <TextField fx:id="jCedula"/>
                                <JFXButton fx:id="btnBuscar" onAction="#actionBuscar" text="Buscar"/>
                            </children>
                            <padding>
                                <Insets bottom="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Nombre"/>
                                <Label fx:id="lblNombre" text="Label">
                                    <HBox.margin>
                                        <Insets left="30.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                        <HBox layoutX="30.0" layoutY="120.0" spacing="10.0">
                            <children>
                                <Label text="Ciudad"/>
                                <Label fx:id="lblCiudad" text="Label">
                                    <HBox.margin>
                                        <Insets left="40.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                        <HBox layoutX="30.0" layoutY="155.0" spacing="10.0">
                            <children>
                                <Label text="Teléfono"/>
                                <Label fx:id="lblTelefono" text="Label">
                                    <HBox.margin>
                                        <Insets left="30.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                        <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
                            <children>
                                <JFXButton fx:id="btnImprimir" onAction="#actionImprimir" styleClass="button-bold"
                                           text="Imprimir"/>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@../CSS/styles-label.css"/>
        <URL value="@../CSS/styles-layout.css"/>
        <URL value="@../CSS/styles-button.css"/>
    </stylesheets>
</AnchorPane>
